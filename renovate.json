{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "dev"
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates once CI succeeds",
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
